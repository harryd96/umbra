<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Copy UTM Link with IP</title>
  <script>
    async function copyUTMLink() {
      try {
        // Fetch the user's IP address
        const response = await fetch('https://api.ipify.org?format=json');
        const data = await response.json();
        const ip = data.ip;
        
        // Construct the UTM link
        const utmLink = `https://umbrashading.co.uk/?utm_source=test&utm_medium=test&utm_campaign=${ip}`;
        
        // Copy to clipboard
        await navigator.clipboard.writeText(utmLink);
        
        // Alert the user
        alert('Link copied to clipboard:\n' + utmLink);
      } catch (error) {
        console.error('Error generating the UTM link:', error);
        alert('Failed to generate the UTM link.');
      }
    }
  </script>
</head>
<body>
  <button onclick="copyUTMLink()">Copy UTM Link</button>
</body>
</html>
